{% extends 'base.html.twig' %}
{% block wrapperClasses %}
    class="extra-left-space"
{% endblock %}
{% block side_nav %}
    {% include 'DsoObservationsLogBundle:Dashboard:side_nav.html.twig' %}
{% endblock %}
{% block mainContent %}
    <div class="row">
        <div class="col-lg-12">
            {% for flashMessage in app.session.flashbag.get('notice') %}
                <div class="alert alert-success">
                    <strong>Success.</strong> {{ flashMessage }}
                </div>
            {% endfor %}
            {{ form_start(form) }}
            <div class="row">
                <div class="col-lg-4">
                    {{ form_row(form.name) }}
                </div>
            </div>
            <div class="row">
                <div class="col-lg-8">
                    {{ form_row(form.dsos) }}
                </div>
            </div>
            <div class="row">
                <div class="col-lg-4">
                    {{ form_row(form.locationId) }}
                </div>
            </div>
            <div class="row">
                <div class="col-lg-4">
                    {{ form_row(form.start) }}
                </div>
                <div class="col-lg-4">
                    {{ form_row(form.end) }}
                </div>
            </div>
            <div class="row">
                <div class="col-lg-4">
                    {{ form_row(form.equipment) }}
                </div>
            </div>
            <div class="row">
                <div class="col-lg-4">
                    {{ form_row(form.conditions) }}
                </div>
            </div>
            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}
