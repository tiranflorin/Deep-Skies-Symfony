{% extends 'base.html.twig' %}
{% block mainContent %}
<div class="row">
    <div class="col-lg-12 col-sm-12 col-xs-12 main">
        <h1 class="page-header">Manage your deep sky observations</h1>
        {% include 'DsoObservationsLogBundle:Dashboard:horizontal_nav.html.twig' %}
        <div class="col-lg-12">
            {% for flashMessage in app.session.flashbag.get('notice') %}
                <div class="alert alert-success">
                    <strong>Success.</strong> {{ flashMessage }}
                </div>
            {% endfor %}
            {{ form_start(form) }}
            <div class="row">
                <div class="col-lg-4">
                    {{ form_row(form.name) }}
                </div>
            </div>
            <div class="row">
                <div class="col-lg-8">
                    {{ form_row(form.dsos) }}
                </div>
            </div>
            <div class="row">
                <div class="col-lg-4">
                    {{ form_row(form.locationId) }}
                </div>
            </div>
            <div class="row">
                <div class="col-lg-4">
                    <div class="form-group"><label class="control-label required" for="form_start">Start Time</label>
                        <input type="text" id="form_start" name="form[start]" required="required" class="form-control">
                    </div>
                </div>
                <div class="col-lg-4">
                    <div class="form-group"><label class="control-label required" for="form_end">End Time</label>
                        <input type="text" id="form_end" name="form[end]" required="required" class="form-control">
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-lg-4">
                    {{ form_row(form.equipment) }}
                </div>
                <div class="col-lg-4">
                    {{ form_row(form.conditions) }}
                </div>
            </div>
            <div class="row">
                <div class="col-lg-4">
                    {{ form_row(form.visibilityLevel) }}
                </div>
            </div>
            {{ form_row(form._token) }}
            {{ form_row(form.save) }}
            {{ form_end(form, {'render_rest': false}) }}
        </div>
    </div>
    </div>
{% endblock %}
