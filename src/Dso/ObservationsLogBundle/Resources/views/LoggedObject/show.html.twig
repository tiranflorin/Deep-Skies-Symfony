{% extends 'base.html.twig' %}
{% block side_nav %}
    {% include 'DsoObservationsLogBundle:Dashboard:side_nav.html.twig' %}
{% endblock %}
{% block mainContent %}

<h1>LoggedObject</h1>

<form class="form-horizontal">
    <fieldset>
        <div class="control-group">
            <label class="control-label">Id</label>
            <div class="controls"><span class="input-xlarge uneditable-input">{{ entity.id }}</span></div>
        </div>
        <div class="control-group">
            <label class="control-label">Objid</label>
            <div class="controls"><span class="input-xlarge uneditable-input">{{ entity.objId }}</span></div>
        </div>
        <div class="control-group">
            <label class="control-label">Userid</label>
            <div class="controls"><span class="input-xlarge uneditable-input">{{ entity.userId }}</span></div>
        </div>
        <div class="control-group">
            <label class="control-label">Listid</label>
            <div class="controls"><span class="input-xlarge uneditable-input">{{ entity.listId }}</span></div>
        </div>
        <div class="control-group">
            <label class="control-label">Comment</label>
            <div class="controls"><span class="input-xlarge uneditable-input">{{ entity.comment }}</span></div>
        </div>
        <div class="control-group">
            <label class="control-label">Createdat</label>
            <div class="controls"><span class="input-xlarge uneditable-input">{{ entity.createdAt|date('Y-m-d H:i:s') }}</span></div>
        </div>
    </fieldset>
</form>

<div>
    <div class="float-left">
        <a class="btn" href="{{ path('logged-objects') }}">
            {{ 'views.recordactions.backtothelist'|trans({}, 'JordiLlonchCrudGeneratorBundle') }}
        </a>
    </div>
    <div class="float-left">
        <a class="btn btn-primary" href="{{ path('logged-objects_edit', { 'id': entity.id }) }}">
            {{ 'views.recordactions.edit'|trans({}, 'JordiLlonchCrudGeneratorBundle') }}
        </a>
    </div>
    <div class="float-left">
        <form action="{{ path('logged-objects_delete', { 'id': entity.id }) }}" method="post">
            <input type="hidden" name="_method" value="DELETE" />
            {{ form_widget(delete_form) }}
            <button class="btn btn-danger" type="submit" onclick="return confirm('{{ 'views.recordactions.confirm'|trans({}, 'JordiLlonchCrudGeneratorBundle') }}');">{{ 'views.recordactions.delete'|trans({}, 'JordiLlonchCrudGeneratorBundle') }}</button>
        </form>
    </div>
</div>
{% endblock %}
