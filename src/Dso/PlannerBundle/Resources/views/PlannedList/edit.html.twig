{% extends 'base.html.twig' %}
{% block stylesheetsArea %}
    {% stylesheets
    'bundles/dsohome/css/*'
    filter="cssrewrite" %}
    <link rel="stylesheet" href="{{ asset_url }}"/>
    {% endstylesheets %}
    <link href="/bundles/jordillonchcrudgenerator/css/crud.css" rel="stylesheet">
{% endblock %}
{% block wrapperClasses %}{% endblock %}
{% block mainContent %}
    <div class="container">

        <h1>Edit PlannedList</h1>

        <form class="well" action="{{ path('planner_planned-lists_update', { 'id': entity.id }) }}"
              method="post" {{ form_enctype(edit_form) }}>
            <input type="hidden" name="_method" value="PUT"/>
            {{ form_widget(edit_form) }}
            <p>
                <button type="submit"
                        class="btn btn-success">Edit</button>
            </p>
        </form>

        <div>
            <div class="float-left">
                <a class="btn" href="{{ path('planner_planned-lists') }}">
                    Back to the list
                </a>
            </div>
            <div class="float-left">
                <form action="{{ path('planner_planned-lists_delete', { 'id': entity.id }) }}" method="post">
                    <input type="hidden" name="_method" value="DELETE"/>
                    {{ form_widget(delete_form) }}
                    <button class="btn btn-danger" type="submit"
                            onclick="return confirm('Delete the item?');">Delete</button>
                </form>
            </div>
        </div>
    </div>
{% endblock %}
