{% extends 'base.html.twig' %}
{% block jumbotronBlock %} {% endblock %}
{% block mainContent %}
    <div>
        <h3>Current location settings:</h3>
        {{ render(controller('DsoPlannerBundle:Planner:locationSettings')) }}
    </div>
    <div class="container">
        <hr>
        <div class="row">
            <div class="col-sm-6 col-md-12 col-lg-12">
                {{ include('DsoPlannerBundle:Planner:predefined_filters.html.twig') }}
            </div>
        </div>
        <hr>
        <div class="row">
            <div class="col-sm-6 col-md-12 col-lg-12">
                {{ include('DsoPlannerBundle:Planner:custom_filters.html.twig') }}
            </div>
        </div>
    </div>

    {% if pagination is defined %}
        <div class="object-list">
            <div class="panel panel-default">
                <!-- Default panel contents -->
                <div class="panel-heading">Objects found: {{ pagination.getTotalItemCount }}</div>
                <div class="panel-body">
                    <div class="navigation">
                        {{ knp_pagination_render(pagination) }}
                    </div>
                </div>

                <!-- Table -->
                <table class="table">
                    <thead>
                        <tr>
                            <th>Name</th>
                            <th>Mag</th>
                            <th>Constellation</th>
                            <th>Obj Type</th>
                        </tr>
                    </thead>
                    <tbody>
                    {% for object in pagination %}
                        <tr {% if loop.index is odd %}class="color"{% endif %}>
                            <td>
                                {{ object.Name1 }}
                                {% if object.Name2 is defined  %}
                                    ({{ object.Name2 }})
                                {% endif %}
                            </td>
                            <td>{{ object.ObjMagnitude }}</td>
                            <td>{{ object.Constellation }}</td>
                            <td>{{ object.ObjType }}</td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>

                <div class="panel-body">
                    {# display navigation #}
                    <div class="navigation">
                        {{ knp_pagination_render(pagination) }}
                    </div>
                </div>
            </div>
        </div>

    {% endif %}
{% endblock %} {# <!-- end mainContent block --> #}
